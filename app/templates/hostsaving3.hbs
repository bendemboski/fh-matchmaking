  <!-- Profile Section -->

  <div class="container" id="host-profile">
    <div class="row" id="hostsaving3">


      <div class="heading">
        <h5>
        Awesome!<br>
        Thanks for your time completing your profile.<br>
        You can preview the list before submitting it.
      </h5>
      </div>

      <div class="col-lg-4 col-md-4 col-sm-12 col-12 steps" id="step1">
        <img src="/assets/images/icon_hello_2.png" alt="hello-icon">
        <div class="subHeading">Start with a hello </div>
            {{#link-to 'hostprofile1-1'}}<a class="edit" href="#">Edit</a>{{/link-to}}
        <ul>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="greeting"></i>Greeting</li>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="basic-info"></i>Basics</li>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="lifestyle"></i>Lifestyle</li>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="health"></i>Health Condition</li>
        </ul>
      </div>


      <div class="col-lg-4 col-md-4 col-sm-12 col-12  steps" id="step2">
        <img src="/assets/images/icon_backyard.png" alt="backyard-icon">
        <div class="subHeading"> Share your backyard </div>
          {{#link-to 'hostprofile2-1'}}<a class="edit" href="#">Edit</a>{{/link-to}}
        <ul>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="location"></i>Location</li>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="backyard-scene"></i>Backyard Scene </li>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="photos"></i>Photos </li>
        </ul>
      </div>


      <div class="col-lg-4 col-md-4 col-sm-12 col-12  steps" id="step3">
        <img src="/assets/images/icon_commitment.png" alt="commitment-icon">
        <div class="subHeading"> Set Expectation &amp; Contribution</div>
                {{#link-to 'hostprofile3-1'}}<a class="edit" href="#">Edit</a>{{/link-to}}
        <ul>
          <li><i class="fa fa-check-circle" aria-hidden="true" id="expectation"></i>Expectation</li>
          <li><i class="fa fa-check-circle" aria-hidden="true"id="question"></i>Customized questions</li>
        </ul>
      </div>
  </div>
</div>
  <!-- Footer Section -->
  <footer class="profile">
    <!--Page Buttons-->
    <div id="pageButton-expand">
      {{#link-to 'hostprofile3-1'}}<button class="backpage" name="next" type="submit" value="host-page1"><i class="fa fa-arrow-left" aria-hidden="true"></i>BACK</button>{{/link-to}}
      {{#link-to 'previewpage_host'}} <button class="nextpage" name="preview" type="submit" value="host-page1">PREVIEW</button>{{/link-to}}
    </div>

    <!--Preogress Wrapper-->
    <div class="progress-wrap">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width:90%">
          <span class="sr-only">90%</span>
        </div>
      </div>
    </div>
  </footer>



