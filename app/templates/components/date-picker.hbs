{{#power-select
  placeholder="Month"
  options=this.months
  selected=this.selectedMonth
  searchEnabled=false
  triggerClass="date-picker month"
  renderInPlace=true
  onchange=(action "setMonth")
as |month|
}}
  {{month.label}}
{{/power-select}}

