{{#each options as |option|}}
  {{profile-page/check-box
    label=option.label
    checked=option.selected
    onchange=(action this.toggleOption option)
  }}
{{/each}}
{{profile-page/check-box
  label="None"
  checked=(eq this.substances.length 0)
  disabled=(eq this.substances.length 0)
  onchange=(action this.setNone)
}}
