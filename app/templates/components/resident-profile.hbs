<div class="container view-profile">
  <div class="row summary">
    <div class="col-2">
      <img class="profile-pic" src="/assets/images/residentProfile.jpg" width="125px" alt="">
    </div>
    <div class="col-8 info">
      <h5>
        {{@profile.firstName}} {{@profile.lastName}}
      </h5>
      <h6>
        {{gender-display @profile.gender}}
        {{#if @user.yearsOld}}
          • {{@user.yearsOld}} years old
        {{/if}}
        • {{@profile.occupation}}
      </h6>
      <h6>
        {{@profile.email}} • {{@profile.phoneNumber}}
      </h6>
      <h6 class="highlight">
        {{@profile.neighborhood}}
        {{#if @profile.kidCount}}
          • Kids {{@profile.kidCount}}
        {{/if}}
        {{#if @profile.petCount}}
          • Pets {{@profile.petCount}}
          {{#if @profile.petBreed}}
            • {{@profile.petBreed}}
          {{/if}}
        {{/if}}
      </h6>
    </div>
  </div>

  <div class="row greeting">
    <div class="col-12">
      <p>{{@profile.greeting}}</p>
    </div>
  </div>

  <div class="row">
    <div class="preview-section col-12">
      <h6>Neighborhood List</h6>
      <p>University District,  East Lake,  Fremont  </p>
    </div>
  </div>

  <div class="row">
    <div class="preview-section col-md-6">
      <h6>Transportation</h6>
      <ul>
        <li>Link</li>
        <li>Bus: 49, 70</li>
      </ul>
    </div>
    <div class="preview-section col-md-6">
      <h6>Environment</h6>
      <p>QFC, Public Library, Green Lake Park</p>
    </div>

    <div class="row divider-above">
      <div class="preview-section col-md-6">
        <h6>Language Spoken</h6>
        <p>To be edited</p>

        <h6>Habit</h6>
        <p>Hiking</p>

        <h6>Favorite Food</h6>
        <p>Pasta</p>

        <h6>Movie Type</h6>
        <p>Comics</p>
      </div>

      <div class="preview-section col-md-6">
        <h6>Mental Illness</h6>
        <p>None</p>

        <h6>Medical Family History</h6>
        <p>Yes. Diabetes</p>

        <h6>Use Illicit Substance/Drug </h6>
        <p>Tabacco</p>
        <h6>Accept Illicit Substance/Drug </h6>
        <p>Tabacco</p>
      </div>
    </div>

    <div class="row divider-above">
      <div class="preview-section col-12">
        <h6>Expectation</h6>
        <ul>
          <li>Let's be friends!</li>
          <li>
            Connection Level:
            <span class="level on"></span>
            <span class="level on"></span>
            <span class="level on"></span>
            <span class="level on"></span>
            <span class="level"></span>
          </li>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="preview-section question col-12">
        <h6>Questions</h6>
        <p>What’s your favorite day of the year?</p>
      </div>
    </div>
  </div>
</div>

{{#if @isMyProfile}}
  {{profile-page/footer
    backRoute="auth.caseworker.resident.question"
    nextRoute="auth.caseworker.resident.thankyou"
    nextLabel="Submit"
  }}
{{/if}}
