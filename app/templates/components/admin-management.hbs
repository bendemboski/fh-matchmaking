<!-- Profile Section -->
<div class="container" id="resident-list">
  <div class="row">
    <div class="list">
      <table id="resident-table">
        <thead>
          <tr>
            <th colspan="2">
              <input
                type="text"
                id="resident-name-input"
                value={{filterText}}
                oninput={{action (mut filterText) value='target.value'}}
                placeholder="Search for names"
                title="Type in a name">
            </th>
            <th> Location <button class="chevron-down" onclick={{action (mut residentsSort) 'location'}}><i class="fa fa-chevron-down" aria-hidden="true"></i></button> </th>
            <th> Occupation <button class="chevron-down" onclick={{action (mut residentsSort) 'occupation'}}><i class="fa fa-chevron-down" aria-hidden="true"></i></button> </th>
            <th> Onboard <button class="chevron-down" onclick={{action (mut residentsSort) 'joined:desc'}}><i class="fa fa-chevron-down" aria-hidden="true"></i></button>  </th>
            <th> Status <button class="chevron-down" onclick={{action (mut residentsSort) 'status'}}><i class="fa fa-chevron-down" aria-hidden="true"></i></button>  </th>
            <th> Note </th>
          </tr>
        </thead>
        <tbody>
          {{#each residents as |res|}}
            <tr>
              <td> <img id="resident1" src="/assets/images/residentProfile.jpg" alt="nick-rschlebusch"> </td>
              <td> <a href="#">{{res.name}}</a> </td>
              <td>{{res.location}}</td>
              <td>{{res.occupation}}</td>
              <td>{{moment-from-now res.joined}}</td>
              <td>{{res.status}}</td>
              <td> <button id="note-icon"onclick="myFunction()"><i class="fa fa-sticky-note" aria-hidden="true"></i> </button></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

  <!-- Footer Section -->
  <footer class="resident-list">
    {{#link-to 'residentprofile1-1'}} <button class="addNew">

      <i class="fa fa-plus" aria-hidden="true"></i>
ADD NEW RESIDENT
</button>{{/link-to}}
  </footer>
