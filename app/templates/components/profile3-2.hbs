  <!-- Profile Section -->

  <div class="container" id="host-profile">
    <div class="row">
      <div class="col-lg-7 col-md-12 col-sm-12 col-12 " id="left-column">
        <form action="#" id="hostform">
          <fieldset>
            {{#if isHost}}
                  <legend class="hostHeading">STEP 3: Almost Done</legend>
                  {{else}}
                  <legend class="residentHeading">STEP 3: Almost Done</legend>
                  {{/if}}
            <div class="form-group">
              <h6> Now, your turn to ask a question to your future neighbor!  </h6>
              <textarea name="hostQuestion" form="hostform" placeholder="Type the question here..."></textarea>
            </div>

          </fieldset>
        </form>
      </div>

      <div class="col-lg-5 col-md-12 col-sm-12 col-12" id="right-column">
        <div class="notebox" id="profilephoto">
          <h6 class="note">
        <i class="fa fa-pencil" aria-hidden="true"></i>Ideas to ask a killer question that find the perfect neighbor:</h6>
          <ul>
            <li>What’s your 1st thing to do when you wake up in the morning?</li>
            <li>What’s your favorite football team?</li>
            <li>What is your favorite animal?</li>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <!-- Footer Section -->
  <footer class="profile">
  {{#if isHost}}
    <!--Page Buttons-->
    <div id="hostPageButton">
      {{#link-to 'hostprofile3-1'}}<button class="backpage" name="next" type="submit" value="host-page1"><i class="fa fa-arrow-left" aria-hidden="true"></i>BACK</button>{{/link-to}}
      {{#link-to 'hostsaving3'}}<button class="nextpage" name="next" type="submit" value="host-page1">NEXT</button>{{/link-to}}
    </div>
    <!--Preogress Wrapper-->
    <div class="progress-wrap">
      <div class="progress">
        <div id="hostProgressBar" class="progress-bar"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
          <span class="sr-only">100%</span>
        </div>
      </div>
    </div>

    {{else}}
    <!--Page Buttons-->
    <div id="residentPageButton">
      {{#link-to 'residentprofile3-1'}}<button class="backpage" name="next" type="submit" value="host-page1"><i class="fa fa-arrow-left" aria-hidden="true"></i>BACK</button>{{/link-to}}
      {{#link-to 'previewpage-resident'}} <button class="nextpage" name="preview" type="submit" value="host-page1">PREVIEW</button>{{/link-to}}
    </div>
    <!--Preogress Wrapper-->
    <div class="progress-wrap">
      <div class="progress">
        <div id="residentProgressBar" class="progress-bar"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">
          <span class="sr-only">100%</span>
        </div>
      </div>
    </div>
  {{/if}}
