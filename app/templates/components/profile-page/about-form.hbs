{{#component
  @profile-form
  onsubmit=@onsubmit
as |form|
}}
  <legend>
    Start with a hello- Lifestyle
  </legend>

  {{#form.group label="What do you do in your free time?" as |group|}}
    {{group.input
      placeholder="Watch football game, hike, garden, bike…"
      value=@changeset.freeTime
      data-test-free-time=true
    }}
  {{/form.group}}

  {{#form.group label="What’s your favorite food?" as |group|}}
    {{group.input
      placeholder="Steak, seafood, I like all food!"
      value=@changeset.favoriteFood
      data-test-favorite-food=true
    }}
  {{/form.group}}

  {{#if @isHost}}
    {{#form.group
      class="substances"
      label="What substances do you use currently?"
      data-test-substance-picker="my"
    }}
      {{substance-picker
        substances=this.changeset.mySubstances
        onchange=(action (mut this.changeset.mySubstances))
      }}
    {{/form.group}}
  {{else}}
    {{#form.group
      class="substances"
      label="What substances would you be comfortable with your host using?"
    }}
      {{substance-picker
        substances=this.changeset.hostSubstances
        onchange=(action (mut this.changeset.hostSubstances))
        data-test-substance-picker="host"
      }}
    {{/form.group}}
    {{#form.group label="Some fun facts about you!" as |group|}}
      {{group.textarea
        placeholder="Tell us more about you…"
        value=@changeset.funFact
        data-test-fun-fact=true
      }}
    {{/form.group}}
  {{/if}}
{{/component}}
