  <!-- Profile Section -->

  <div class="container" id="host-profile">
    <div class="row">
      <div class="col-lg-7 col-md-12 col-sm-12 col-12 " id="left-column">
        <form action="#" id="hostform">
          <fieldset>
            {{#if isHost}}
              <legend class="hostHeading">STEP 2: Share about your backyard</legend>
                  {{else}}
                  <legend class="residentHeading">STEP 2: Share your thought about the backyard</legend>
                  {{/if}}
            <div class="form-group">
              <div id="thingtodo">
                <h6>What’d you like to do in your backyard? </h6>
                <input type="text" name="thing-to-do" placeholder="e.g. garden, do yoga, enjoy a cup of coffee…">
              </div>
            </div>
            <div class="form-group">
              <div id="bky-description">
                <h6>One sentence to describe your backyard. </h6>
                <textarea name="backyard-brief" form="hostform" placeholder=""></textarea>
              </div>
            </div>

          </fieldset>
        </form>
      </div>

      <div class="col-lg-5 col-md-12 col-sm-12 col-12" id="right-column">
        <div class="notebox" id="profilephoto">
          <h6 class="note">
        <i class="fa fa-lightbulb-o" aria-hidden="true"></i>Other Hosts' Samples:</h6>
          <ul>
            <li>It’s a place that filled with happiness and we’d love to share it out with our neighborhood.</li>
            <li>A heaven for our dog, Giant, who loves to play around with our neighbors.</li>
          </ul>

        </div>

      </div>
    </div>
  </div>


  <!-- Footer Section -->
  <footer class="profile">
    <!--Page Buttons-->
    <div id="hostPageButton">
      {{#link-to 'hostprofile2-1'}}<button class="backpage" name="next" type="submit" value="host-page1"><i class="fa fa-arrow-left" aria-hidden="true"></i>Back</button>{{/link-to}}
      {{#link-to 'hostprofile2-3'}}<button class="nextpage" name="next" type="submit" value="host-page1">Next</button>{{/link-to}}
    </div>
    <!--Preogress Wrapper-->
    <div class="progress-wrap">
      <div class="progress">
        <div id="hostProgressBar" class="progress-bar"  role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
          <span class="sr-only">60%</span>
        </div>
      </div>
    </div>


  </footer>
