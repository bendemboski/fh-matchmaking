  <!-- Profile Section -->

  <div class="container" id="host-profile">
    <div class="row">
      <div class="col-lg-7 col-md-12 col-sm-12 col-12 " id="left-column">
        <form action="#" id="hostform">
          <fieldset>
            <legend>STEP 3: Set your expectation &amp; contribution</legend>


            <div class="form-group" id="relationship">
              <h6>Name one relationship that you imagine you and your neighbor would be like?</h6>
              <input type="text" name="relationship" placeholder="Friends, family members...">
            </div>

            <div class="form-group" id="slideContainer">
              <h6>How much would you like to interaction with your future neighbors?</h6>
              <input type="range" min="0" max="5" value="1" class="slider" id="myRange">
              <ul>
                <li id="level1">1</li>
                <li id="level2">2</li>
                <li id="level3">3</li>
                <li id="level4">4</li>
                <li id="level5">5</li>
              </ul>


              {{!-- <span id="demo"></span> --}}
            </div>
            <script>
              var slider = document.getElementById("myRange");
              var output = document.getElementById("demo");
              output.innerHTML = slider.value;

              slider.oninput = function() {
                output.innerHTML = this.value;
              }
            </script>
            <!--Page Buttons-->
            <div id="pageButton">
              {{#link-to 'hostprofile2-3'}}<button class="backpage" name="next" type="submit" value="host-page1"><i class="fa fa-arrow-left" aria-hidden="true"></i>BACK</button>{{/link-to}}
              {{#link-to 'hostprofile3-2'}}<button class="nextpage" name="next" type="submit" value="host-page1">NEXT</button>{{/link-to}}
            </div>

          </fieldset>
        </form>
      </div>



      <div class="col-lg-5 col-md-12 col-sm-12 col-12" id="right-column">
        <div class="quote-section">
          <img src="#" alt="">
          <p class="quote">“I feel like a million bucks!” </p><br>
          <p class="hostName"> - Bobby,
            <br>First Home Resident</p>

        </div>

      </div>
    </div>
  </div>

  <!-- Footer Section -->
  <footer class="progress-wrap">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%">
