{{#hostprofile1-1-code as |code|}}
  {{#nav-bar id="hostProfileNav" }}
    <li class="nav-item dropdown">
      <a href="#hostMainPage" class="dropdown-toggle nav-link js-scroll-trigger" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">YOUR PROFILE</a>
      <ul class="dropdown-menu">
        <li><a href="#howItWorks" class="nav-link js-scroll-trigger"> HOW IT WORKS</a> </li>
        <li role="separator" class="divider"></li>
        <li><a href="#buildProfile" class="nav-link js-scroll-trigger"> BUILD PROFILE</a> </li>
      </ul>
    </li>
    <li class="nav-item">
      <a class="nav-link js-scroll-trigger" href="#community">COMMUNITY</a>
    </li>
    <li class="nav-item">
      <a class="nav-link js-scroll-trigger" href="#help">HELP</a>
    </li>
    <li class="nav-item">
      <a class="nav-link js-scroll-trigger" href="#account-setting"><i class="fa fa-user-circle-o"></i></a>
    </li>
  {{/nav-bar}}

  <!-- Profile Section -->

  <div class="container" id="host-profile">
    <div class="row">
      <div class="col-lg-7 col-md-12 col-sm-12 col-12 " id="left-column">
        <form action="#" id="hostform">
          <fieldset>
            <legend>STEP 1: Say HI, and introduce yourself!</legend>
            <div class="form-group">
              <h6>Upload Your Profile Photo</h6>
              <div id="profile-container">
                <img id="profileImage" src= {{code.profileSrc}} role="button" onclick= {{action 'chooseProfilePic' target=code}} />

              </div>
              <input id="imageUpload" type="file" name="profile_photo" placeholder="Photo" required="" capture onchange= {{action 'onProfilePic' target=code}}>
            </div>
            <div class="form-group">
              <h6>Greet Your New Neighbors</h6>
              <textarea name="greetings" form="hostform" placeholder="Write a sentence to welcome your future neighbors..."></textarea>
            </div>
            <!--Page Buttons-->
            <div>
              <button class="backpage" name="next" type="submit" value="host-page1"><i class="fa fa-arrow-left" aria-hidden="true"></i>BACK</button>
              {{#link-to 'hostprofile1-2'}}<button class="nextpage" name="next" type="submit" value="host-page1">NEXT</button>{{/link-to}}
            </div>

          </fieldset>
        </form>
      </div>

      <div class="col-lg-5 col-md-12 col-sm-12 col-12" id="right-column">
        <div class="notebox" id="profilephoto">
          <h6 class="note">
        <i class="fa fa-pencil" aria-hidden="true"></i>How to make a good quality photo:</h6>
          <ul>
            <li>Do bring your smile</li>
            <li>Do take it under natural light</li>
            <li>Do upload photo at least 170 x 170px</li>
          </ul>

        </div>
        <div class="notebox" id="greetings">
          <h6 class="note">
        <i class="fa fa-pencil" aria-hidden="true"></i>Ideas to write a greeting:</h6>
          <ul>
            <li>General introduction of yourself and your neighborhood with some fun facts</li>
            <li>Reasons of joining the program</li>
            <li>Expect of being a host</li>
          </ul>

        </div>
      </div>
    </div>
  </div>


  <!-- Footer Section -->
  <footer class="progress-wrap">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width:10%">
        <span class="sr-only">10%</span>
      </div>
    </div>

  </footer>
{{/hostprofile1-1-code}}
