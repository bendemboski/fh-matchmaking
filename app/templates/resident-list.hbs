<!-- Profile Section -->
<div class="container" id="resident-list">
  <div class="row">
    <div class="list">
      <table id="resident-table">
        <thead>
          <tr>
            <th colspan="2">
              <input
                type="text"
                id="resident-name-input"
                value={{nameFilter}}
                oninput={{action (mut nameFilter) value='target.value'}}
                placeholder="Search for names"
                title="Type in a name">
            </th>
            <th>
              Location
              {{filter-menu options=locations value=locationFilter setValue=(action (mut locationFilter))}}
            </th>
            <th>
              Occupation
              {{filter-menu options=occupations value=occupationFilter setValue=(action (mut occupationFilter))}}
            </th>
            <th>
              Onboard
            </th>
            <th>
              Status
              {{filter-menu options=statuses value=statusFilter setValue=(action (mut statusFilter))}}
            </th>
            <th> Note </th>
          </tr>
        </thead>
        <tbody>
          {{#each residents as |res|}}
            <tr>
              <td> <img id="resident1" src="/assets/images/residentProfile.jpg" alt="nick-rschlebusch"> </td>
              <td> <a href="#">{{res.name}}</a> </td>
              <td>{{res.location}}</td>
              <td>{{res.occupation}}</td>
              <td>{{moment-from-now res.joined}}</td>
              <td>{{res.status}}</td>
              <td> <button id="note-icon"onclick="myFunction()"><i class="fa fa-sticky-note" aria-hidden="true"></i> </button></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

  <!-- Footer Section -->
  <footer class="resident-list">
    {{#link-to 'residentprofile1-1'}} <button class="addNew">

      <i class="fa fa-plus" aria-hidden="true"></i>
ADD NEW RESIDENT
</button>{{/link-to}}
