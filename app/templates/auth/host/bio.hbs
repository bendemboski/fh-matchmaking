{{#profile-page
  changeset=this.changeset
  backRoute="auth.host.greeting"
  nextRoute="auth.host.about"
as |page|
}}
  {{#page.left-column}}
    {{page.bio-form changeset=this.changeset isHost=true}}
  {{/page.left-column}}
  {{#page.right-column}}
    <div class="testimonial-pic-kim-and-dan">
      <div class="quote-box">
        <div class="quote">
         "As introverts, we appreciate Robert's gregariousness, and love his sense of humor. We found shared interests in music and gardening.” -- Kim and Dan, first BLOCK Hosts
       </div>
     </div>
   </div>
  {{/page.right-column}}

  {{page.footer percent=20}}
{{/profile-page}}
