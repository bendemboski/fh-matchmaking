{{#profile-page
  changeset=this.changeset
  backRoute="auth.caseworker.resident.about"
  nextRoute="auth.caseworker.resident.location"
as |page|
}}
  {{#page.left-column}}
    {{#page.profile-form as |form|}}
      <legend>
        STEP 1: Say HI, and introduce yourself!
      </legend>

      {{#form.group
        class="substances"
        label="What substances do you use currently?"
      }}
        {{substance-picker
          substances=this.changeset.mySubstances
          onchange=(action (mut this.changeset.mySubstances))
          data-test-substance-picker="my"
        }}
      {{/form.group}}

      {{#form.group
        class="substances"
        label="What substances would you be comfortable with your host using?"
      }}
        {{substance-picker
          substances=this.changeset.hostSubstances
          onchange=(action (mut this.changeset.hostSubstances))
          data-test-substance-picker="host"
        }}
      {{/form.group}}

    {{/page.profile-form}}
  {{/page.left-column}}
  {{#page.right-column}}
    {{#page.notebox icon="pencil" heading="Note:"}}
      Being honest and sincere is to find a best match!
    {{/page.notebox}}
  {{/page.right-column}}

  {{page.footer percent=50}}
{{/profile-page}}
